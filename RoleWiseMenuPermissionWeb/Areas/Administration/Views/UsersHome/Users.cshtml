@model List<RoleWiseMenuPermissionWeb.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-3">
    <div class="col-6">
        <h4>Users</h4>
    </div>
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @* <a asp-action="EditUser" asp-controller="UsersHome" asp-route-id="@item.Id">Edit</a> *@
                    @Html.ActionLink("Edit Permission", "EditUserPermission", "UsersHome",new{id=@item.Id},new{@class="btn btn-success"})
                </td>
            </tr>
        }
    </tbody>
</table>