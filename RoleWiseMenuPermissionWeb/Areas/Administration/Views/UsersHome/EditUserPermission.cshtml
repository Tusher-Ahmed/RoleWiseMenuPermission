@model RoleWiseMenuPermissionWeb.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit User Permission";
}

<div class="row pb-1">
    <div class="col-6">
        <h4>Modify <span class="text-danger">"@Model.Email"</span> Permission</h4>
        <hr />
    </div>
</div>

@using (Html.BeginForm("EditUserPermission", "UsersHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <p class="fw-bold">Roles:</p>
    <div class="form-group">
        <ul style="list-style-type: none; padding:0px;">
            @for (var i = 0; i < Model.Roles.Length; i++)
            {
                <li>
                    @Html.HiddenFor(model => model.Roles[i].Id)
                    @Html.HiddenFor(model => model.Roles[i].Name)
                    @Html.CheckBoxFor(model => model.Roles[i].Selected)
                    <label>@Model.Roles[i].Name</label>
                </li>
            }
        </ul>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}