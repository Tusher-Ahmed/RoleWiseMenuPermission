@model List<RoleWiseMenuPermissionWeb.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-4">
    <div class="col-6">
        <h4>Roles</h4>
    </div>
    <div class="col-6 text-end">
        @* <a asp-action="CreateRole" asp-controller="MenuRole" class="btn btn-primary">Create Role</a> *@
        @Html.ActionLink("Create Role", "CreateRole", "UsersHome", null, new { @class = "btn btn-success" })
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>sl</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @Html.ActionLink("Edit Role Permissions", "EditRolePermission", "UsersHome",new{id=item.Id},new{@class="btn btn-success"})
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>